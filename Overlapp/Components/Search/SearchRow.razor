@namespace Overlapp.Components

<div class="row">
	<div class="col-3">
		<div>
			<img style="max-width:100%; max-height:100%;" src="@ImagePath("/no-image-available.svg")" />
		</div>
	</div>
	<div class="col-6 d-flex flex-column">
		<h5 class="fw-bold">@Media.NameOrTitle</h5>
		<div class="mt-auto">@Media.MediaType</div>
		<div class="mb-4">@Media.ReleaseDate?.Year</div>
	</div>
	<div class="col-3 d-flex align-items-center">
		<button class="btn @(AlreadyAdded ? "btn-danger" : "btn-outline-primary")" style="height:50px; width:50px; font-weight:bold" @onclick="async () => await SelectedClick.InvokeAsync(new MediaContainer(Media))">@(AlreadyAdded ? "x" : "+")</button>
	</div>
</div>